# ==========================================
# ENVIRONMENT VARIABLES EXAMPLE
# ==========================================
# Copy this file to .env and update values
# ==========================================

# Application
NODE_ENV=development
PORT=4040
APP_NAME=boiler
APP_URL=http://localhost:4040

# Database
MONGO_URI=mongodb://localhost:27017/boiler

# JWT Configuration (IMPORTANT: Change these in production!)
# Must be at least 32 characters for security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-32-chars-min
JWT_EXPIRY=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-must-be-32-chars
JWT_REFRESH_EXPIRY=7d

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
GLOBAL_RATE_LIMIT_MAX=100
PER_IP_RATE_LIMIT_MAX=10
